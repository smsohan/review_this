<table class="table table-striped">
  <thead>
    <tr>
      <th>Bid Amount</th>
      <th>Bidder</th>
      <th>Bid Message</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% bids.each do |bid| %>
      <tr>
        <td><%= number_to_currency bid.bid_amount %></td>
        <td><%= bid.bidder.name %></td>
        <td><%= truncate bid.bid_message, length: 100 %></td>
        <td><%=distance_of_time_in_words_to_now bid.created_at %> ago</td>
        <td>
          <% if bid.bidder == current_user %>

            <%= link_to 'Details', bid_path(bid) %>

            <%#= button_to 'Edit',
                        edit_review_request_bid_path(bid.review_request, bid), :class => 'btn btn-mini', method: :get %>
            <%#= button_to 'Delete',
                        bid_path(bid),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger', method: :get %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>