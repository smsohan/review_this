<%- model_class = Bid -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:review_request_id) %>:</strong></dt>
  <dd><%= @bid.review_request_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bidder_id) %>:</strong></dt>
  <dd><%= @bid.bidder_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bid_amount) %>:</strong></dt>
  <dd><%= @bid.bid_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bid_message) %>:</strong></dt>
  <dd><%= @bid.bid_message %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bids_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bid_path(@bid), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bid_path(@bid),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
